<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


<!--
    TODO: implement night theme
-->
    <!--<style name="Theme.RossApp" parent="Theme.MaterialComponents.DayNight.NoActionBar"> -->
    <style name="Theme.RossApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E63282</item>
        <item name="colorPrimaryVariant">#782891</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <!--
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->

        <!-- Text settings -->
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textSize">18sp</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/rubik</item>


        <item name="textInputStyle">@style/RossApp_TextInputLayoutStyle</item>
    </style>

    <!---Text inputs-->

    <style name="RossApp_TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/textInputCornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/textInputCornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/textInputCornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/textInputCornerRadius</item>

        <item name="errorIconDrawable">@null</item>
        <item name="materialThemeOverlay">@style/RossApp_TextInputLayoutOverlayStyle</item>
        <item name="boxStrokeColor">@color/selector_textinput_border</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/inactiveTextColor</item>
    </style>

    <style name="RossApp_TextInputLayoutOverlayStyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="editTextStyle">@style/RossApp_EditTextStyle</item>
    </style>

    <style name="RossApp_EditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/textColor</item>
    </style>


    <!---Login button-->
    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_login_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!---Reused styles for text-->
    <style name="inactiveText">
        <item name="android:textColor">@color/inactiveTextColor</item>
    </style>

    <style name="accentText">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>